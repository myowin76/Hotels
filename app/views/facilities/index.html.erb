<div class="left-area">
	<div class="win-box">
      <div class="admin">
        <h2>Admin</h2>
          <ul>
    				<li><%= link_to "Add New Facility", new_facility_path %></li>
    			</ul>  			
      </div>			
		</div>
  <%= render :partial => 'shared/admin_menu' %>      
</div>
<div class="main-content">


<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% for facility in @facilities %>
    <tr>
      <td><%= facility.name %></td>
      <td><%= facility.description %></td>
      <td><%= link_to "Show", facility %></td>
      <td><%= link_to "Edit", edit_facility_path(facility) %></td>
      <td><%= link_to "Destroy", facility, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

</div>