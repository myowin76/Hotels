<%= form_for @hotel do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :fax %><br />
    <%= f.text_field :fax %>
  </p>
  <p>
    <%= f.label :star %><br />
    <%= f.text_field :star %>
  </p>
  <p>
    <%= f.label :no_of_rooms %><br />
    <%= f.text_field :no_of_rooms %>
  </p>
  <p>
    <%= f.label :overview %><br />
    <%= f.text_field :overview %>
  </p>
  <p>
    <%= f.label :terms %><br />
    <%= f.text_area :terms %>
  </p>
  <p>
    <%= f.label :direction %><br />
    <%= f.text_area :direction %>
  </p>
  <h3>Hotels Features and Services</h3>
	<ul>
	<% @all_facilities.each do |facility| %>
		<li>
		  <%= check_box_tag "hotel_facility_list[]", facility.id, @hotel.facilities.map{|f| f.id}.include?(facility.id) %>
		  <%= facility.name %>
		</li>
	<% end %>
	</ul>
  
  <p><%= f.submit %></p>
<% end %>
