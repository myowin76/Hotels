

<div class="center">
  <div class="login-box-top"></div>
	<div class="login-box">

	    <div class="mid">
    		<h2 title=""><%= @box_header %></h2>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
		<%= form_for(@hotels_roomtype) do |f| %>
		  <% if @hotels_roomtype.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@hotels_roomtype.errors.count, "error") %> prohibited this hotels_roomtype from being saved:</h2>

		      <ul>
		      <% @hotels_roomtype.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
			<%= f.hidden_field :hotel_id, :value => @hotels_roomtype.hotel_id %>
		<div class="fields">	
		  <div class="field">
		    <%= f.label :room_type_id %>
		    <%#= f.text_field :room_type_id %>
			  <%= f.select(:room_type_id, RoomType.all.collect { |rt| [rt.name, rt.id]}) %>    
		  </div>
		  <div class="field">
		    <%= f.label :no_of_rooms %>
		    <%= f.text_field :no_of_rooms %>
		  </div>
		  <div class="field">
		    <%= f.label :price %>
		    <%= f.text_field :price %>
		  </div>
		  <div class="field">
		    <%= f.label :offer_price %>
		    <%= f.text_field :offer_price %>
		  </div>
		  <div class="buttons">
			<%if params[:id]%>
		    	<%= f.submit "Update", :class=> "update-btn"%>
			<% else %>
			    <%= f.submit "Add", :class=> "add-btn"%>
			<% end %>
		  </div>
		</div>
		<% end %>

		
		<div class="links">
			<%=link_to "Cancel" , :back %>
		</div>



    </div>	  		
	</div>
  <div class="login-box-bottom"></div>
</div>

